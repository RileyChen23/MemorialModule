/* pages/memorial/memorial.wxss */
/* 伦理设计意图：使用柔和的色调和简洁的布局，营造静默缅怀氛围 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fafafa 0%, #f5f5f5 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 静默背景 */
.memorial-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, #ffffff 0%, #f5f5f5 100%);
  z-index: -1;
}

/* 头部信息 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #e0e0e0;
  background: #f5f5f5;
}

.deceased-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: #ffb74d;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid white;
}

.badge-icon {
  font-size: 24rpx;
}

.name {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #424242;
  margin-bottom: 12rpx;
}

.relationship {
  display: block;
  font-size: 28rpx;
  color: #9e9e9e;
}

/* 纪念文本 */
.memorial-text-area {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 80rpx;
}

.memorial-text {
  display: block;
  font-size: 32rpx;
  color: #616161;
  text-align: center;
  line-height: 1.8;
  font-weight: 300;
}

/* 蜡烛区域 */
.candle-area {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 40rpx;
}

.candle-wrapper {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.candle-wrapper:active {
  transform: scale(0.98);
}

.candle-wrapper.lit {
  background: linear-gradient(180deg, #fff8e1 0%, #fff3e0 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 183, 77, 0.2);
}

.candle-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  filter: brightness(0.8);
}

.candle-wrapper.lit .candle-icon {
  filter: brightness(1.2);
  animation: flicker 2s infinite;
}

@keyframes flicker {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.8;
  }
}

.candle-label {
  font-size: 28rpx;
  color: #757575;
  font-weight: 400;
}

/* 统计区域 */
.stats-area {
  margin-bottom: 40rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #9e9e9e;
}

/* 功能按钮区域 */
.action-area {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  width: 100%;
  height: 96rpx;
  background: white;
  border-radius: 48rpx;
  border: 2rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #616161;
  font-weight: 500;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
  background: #fafafa;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 伦理提示 */
.ethics-notice {
  margin-top: auto;
  padding-top: 60rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #bdbdbd;
  text-align: center;
  font-weight: 300;
  font-style: italic;
}

