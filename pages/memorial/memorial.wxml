<view class="memorial-container">
  <view class="title">思念有光</view>
  
  <!-- 日期提醒 -->
  <view class="reminder" wx:if="{{remindDate}}">
    温馨提醒：{{remindDate}}是妈妈的生日
  </view>

  <!-- 文字留言 -->
  <textarea placeholder="写下想对妈妈说的话..." bindinput="inputText"></textarea>
  <view class="warm-tips">
    温暖提示：{{randomTip}}
  </view>

  <button bindtap="submitText" class="submit-btn">保存留言</button>
  
  <!-- 情感冷静期提示 -->
  <view class="calm-tip" wx:if="{{showCalmTip}}">
    稍作休息吧，思念会慢慢沉淀
  </view></view>

